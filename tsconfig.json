{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES2020"
    ],
    // "target": "ES2020",
    "module": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // "baseUrl": ".",
    // bundler mode
    "moduleResolution": "bundler", // node
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "declaration": true,
    "noEmit": true,
    "jsx": "preserve", // "react-jsx"
    "types": [
      "node"
    ],
    // Linting
    "strict": true,
    "noUnusedLocals": false,
    "incremental": true, // not present
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src",
    "./dist/types/**/*.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/types/app/page.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
